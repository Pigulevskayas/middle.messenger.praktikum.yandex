{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2016",
        "declaration": false,
        "module": "es2015",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "lib": [
          "ES2021.String",
          "es6", 
          "dom",
        ]
    },
    "include": ["*.ts"]
}